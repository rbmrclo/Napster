<ul class="nav nav-pills">
  <li><%= link_to "Home", root_path %></li>
  <li><%= link_to "Artists", artists_path %></li>
  <li><%= link_to "Albums", artist_album_path(1,1) %></li>
</ul>
<div class="dialog">
<center><h2> Create Artist </h2></center>
<%= form_for @artist do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name, :placeholder => 'Enter Artist Name' %><br/>
  <%= f.label :bio, "Bio" %>
  <%= f.text_area :bio, rows: 3, :placeholder => 'Enter Description of Artist' %><br/>
  <%= f.submit "Submit", :disable_with => 'Submitting...', :class => 'btn btn-inverse' %>
<% end %>
<% if @artist.errors.any? %>
  <% @artist.errors.full_messages.each do |msg| %>
  <li class="alert alert-error"><%= msg %></li>
  <% end %>
<% end %>
</div>
<%= link_to "Back", artists_path %>