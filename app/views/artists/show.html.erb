<ul class="nav nav-pills">
  <li><%= link_to "Home", root_path %></li>
  <li><%= link_to "Artists", artists_path %></li>
  <li><%= link_to "Albums", artist_album_path(1,1) %></li>
</ul>
<div class="dialog">
<h1><%= @artist.name.titlecase %></h1>
<li><b><span class="text-info">Bio:</span> </b><%= @artist.bio %> </li>
<li><b><span class="text-info">Albums</b></li>
<ol type="1">
<% if @artist.albums.count > 0 %>
<% @artist.albums.each do |album| %>
<li class="muted"><%= album.album_name %></li>
<% end %>
<% else %>
<span class="muted"><%= 'You don\'t have existing Albums.' %>
	<br/>
	<%= 'Create an Album first!' %>
</span>
<% end %>
</ol>
<hr>
<% if @artist.albums.count == 0 %>
<%= button_to 'Create an Album', artist_albums_path(@artist), :class => 'btn btn-info', :method => :get %>
<% else %>
<%= button_to 'Show Album Details', artist_albums_path(@artist), :class => 'btn btn-info', :method => :get %>
<% end %>
</div>
<br/>
<hr>
<%= link_to 'Back to Artists', artists_path %>