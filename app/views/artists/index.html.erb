<h1>Artist page</h1>

 <table class="table table-striped">
   <th>Name</th>
   <th>Bio</th>
   <th>Album/s</th>
   <th></th>
   <th></th>
   <th></th>

<% @artists.each do |artist| %>
 
  <tr>
    <td><%= artist.name %></td>
    <td><%= artist.bio %></td>
    <td><% artist.albums.each do |album| %>
    <%= link_to album.album_name, artist_album_path(artist, album) %><br/>
    <% end %>
    </td>
    <td class="btn"><%= link_to 'Show', artist %></td>
    <td class="btn btn-warning"><%= link_to 'Edit', edit_artist_path(artist) %></td>
    <td class="btn btn-danger"><%= link_to 'Destroy', artist, :method => :delete, :data => {:confirm => "Please wag mo ko delete :(" } %></td>
  </tr>

<% end %>
</table>
<br/>
<%= link_to "Add artist", new_artist_path %>
<hr>
