<h1><%= "Albums of #{@artist.name.titlecase}" %></h1>
<table class="table table-striped">
	<tr>
		<th> Album Name </th>
		<th> Genre </th>
		<th> Date Published </th>
		<th> Remarks </th>
		<th></th>
		<th></th>
	</tr>
	<% @artist.albums.each do |album| %>
		<tr>
		<td><%= link_to album.album_name , artist_album_tracks_path(@artist, album) %></td>
	 	<td><span class="muted"><%= album.genre %> </span></td>
		<td><span class="muted"><%= album.date_published %></td>
		<td><span class="muted"><%= album.remarks %></td>
		<td><%= link_to 'Edit', edit_artist_album_path(@artist,album) %></td>
		<td><%= link_to 'Destroy', @artist_album_path, :method => :delete, :data => {:confirm => "Are you sure?" } %></td>
		</tr>
	<% end %>

</table>
<br/>
<%= link_to "Back to #{@artist.name}", artist_path(@artist)%>